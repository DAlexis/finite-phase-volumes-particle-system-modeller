<?xml version="1.0"?>
<model name="Test model not related to thundercloud">
    <!-- Description of space grid -->
    <space_grid>
        <axis id="x_coord" name="Horisontal coordinate, m">
            <division mode="specific">
                <filename>configs/x_segments.txt</filename>
            </division>
        </axis>
        
        <axis id="y_coord" name="Vertical coordinate, m">
            <division mode="uniform">
                <min>0</min>
                <max>10</max>
                <segments_count>10</segments_count>
            </division>
        </axis>
    </space_grid>
    
    <!-- Description of each fraction -->
    <fractions>
        <fraction id="fract1" name="Test Fraction One">
            <fraction_space>                
                <axis id="y_speed" name="Vertical speed, m/s">
                    <division mode="uniform">
                        <min>-100</min>
                        <max>100</max>
                        <segments_count>20</segments_count>
                    </division>
                </axis>                
                <axis id="x_speed" name="Horisontal speed, m/s">
                    <division mode="uniform">
                        <min>-10</min>
                        <max>10</max>
                        <segments_count>10</segments_count>
                    </division>
                </axis>                
            </fraction_space>
            <quantities>
                <quantity id="concentration" name="Concentration of particles"></quantity>
            </quantities>            
        </fraction>
    </fractions>
</model>
